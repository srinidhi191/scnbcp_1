# API Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB Connection
# For production, use your MongoDB Atlas connection string or other MongoDB provider
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Secret for authentication
# Use a strong, random secret in production (e.g., generated with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Client URL for CORS
# Set this to your frontend URL
# Development: http://localhost:5173
# Production: https://your-frontend-url.com
CLIENT_URL=http://localhost:5173

# Email Configuration (optional - for sending notifications)
# You can use Ethereal for testing: https://ethereal.email/
# For production, use a real SMTP service like SendGrid, Mailgun, or Gmail
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
MAIL_FROM=noreply@yourdomain.com
